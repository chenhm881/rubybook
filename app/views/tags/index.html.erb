<% provide(:title, 'Tag') %>
      <!-- Static navbar -->
<%= render "layouts/header" %>
      <!-- -->
<div class="container">
  <div class="hero-unit">
    <div class="row">
        <div class="col-md-3">
           <%= render '/articles/sidenav_categories' %>
        </div>
        <div class="col-md-9" role="main">
           <div class="container-fluid"> 
              <% @tags.each do |tag| %>
                 <div class="row">
                    <div class="col-md-3"><%=tag.id%></div>
                    <div class="col-md-3"><%=tag.name%></div>
                    <div class="col-md-3"><%=link_to "Edit", edit_tag_path(tag) %></div>
                    <div class="col-md-3"><%=link_to "Destroy", tag_path(tag),  method: :delete, data: {confirm: 'Are you sure?'} %></div>
                 </div>
              <% end %>
           </div>
        </div>
    </div>
     
  </div>
</div>